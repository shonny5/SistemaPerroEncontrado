{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
		<link rel="stylesheet" href="{{ asset('bundles/sistemaperrouser/css/registration.css') }}" />
		<div class="container">
		    <div class="row centered-form">
		    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
		        <div class="panel panel-default">
		            <div class="panel-heading">
		                    <h3 class="panel-title">Bienvenidos al Sistema de Perros</h3>
		                    </div>
		                    <div class="panel-body">
							<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} 
									method="POST" class="fos_user_registration_register">
								{{ form_start(form) }}
			                        <div class="form-group">
			                            {{ form_widget(form.username) }}
			                        </div>

			                        <div class="form-group">
			                            {{ form_widget(form.email) }}
			                        </div>

			                        <div class="form-group">
			                            {{ form_widget(form.plainPassword) }}
			                        </div>
			                        
			                        <div class="form-group">
			                            {{ form_widget(form.nombre) }}
			                        </div>                      
			                        
			                        <div class="form-group">
			                            {{ form_widget(form.apellido) }}
			                        </div>                      

			                        <div class="form-group">
			                            {{ form_widget(form.direccion) }}
			                        </div>

			                        <div class="form-group">
			                            {{ form_widget(form.telefono) }}
			                        </div>

			                        <input type="submit" value="Registrarse" 
			                        		class="btn btn-info btn-block"/>
			                    {{ form_end(form) }}
		                    </form>
		                </div>
		            </div>
		        </div>
		    </div>
		</div>
{% endblock fos_user_content %}